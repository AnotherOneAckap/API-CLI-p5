#!/usr/bin/env perl
use strict;
use warnings;
use 5.010;
use Data::Dumper;
use FindBin '$Bin';
use lib "$Bin/../../lib";

package API::CLI::DigitalOcean;
use base 'API::CLI';

package main;
use YAML::XS qw/ LoadFile /;

my $openapi_file = "$Bin/../digitalocean-openapi.yaml";
my $openapi = LoadFile($openapi_file);
my $appspec_file = "$Bin/../digitalocean-appspec.yaml";
my $appspec = LoadFile($appspec_file);
my $cli = API::CLI::DigitalOcean->new({
    openapi => $openapi,
    spec => $appspec,
    name => "digitaloceancl",
    dir => "$ENV{HOME}/.digitaloceancl",
});
$cli->run;
