#!/usr/bin/env perl
use strict;
use warnings;
use 5.010;
use Data::Dumper;
use FindBin '$Bin';
use lib "$Bin/../../lib";

use API::CLI;
use YAML::XS qw/ LoadFile /;

my $openapi_file = "$Bin/../github-openapi.yaml";
my $openapi = LoadFile($openapi_file);
my $cli = API::CLI->new({
    openapi => $openapi,
    name => "githubcl",
    dir => "$ENV{HOME}/.githubcl",
});
$cli->run;
